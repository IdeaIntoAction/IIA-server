{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "passwordHash": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "posts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Post"
          }
        },
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Session"
          }
        },
        "userRoles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UserRole"
          }
        }
      },
      "required": [
        "name",
        "email",
        "passwordHash",
        "updatedAt"
      ]
    },
    "Post": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "authorId": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "isPublished": {
          "type": "boolean",
          "default": false
        },
        "publishedAt": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "$ref": "#/definitions/User"
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TagOnPost"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CategoryOnPost"
          }
        }
      },
      "required": [
        "authorId",
        "title",
        "slug",
        "content",
        "updatedAt"
      ]
    },
    "Tag": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "posts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TagOnPost"
          }
        }
      },
      "required": [
        "name",
        "slug"
      ]
    },
    "Category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "posts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CategoryOnPost"
          }
        }
      },
      "required": [
        "name",
        "slug"
      ]
    },
    "Role": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "userRoles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UserRole"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "UserRole": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer"
        },
        "roleId": {
          "type": "integer"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "role": {
          "$ref": "#/definitions/Role"
        }
      },
      "required": [
        "userId",
        "roleId"
      ]
    },
    "TagOnPost": {
      "type": "object",
      "properties": {
        "postId": {
          "type": "integer"
        },
        "tagId": {
          "type": "integer"
        },
        "post": {
          "$ref": "#/definitions/Post"
        },
        "tag": {
          "$ref": "#/definitions/Tag"
        }
      },
      "required": [
        "postId",
        "tagId"
      ]
    },
    "CategoryOnPost": {
      "type": "object",
      "properties": {
        "postId": {
          "type": "integer"
        },
        "categoryId": {
          "type": "integer"
        },
        "post": {
          "$ref": "#/definitions/Post"
        },
        "category": {
          "$ref": "#/definitions/Category"
        }
      },
      "required": [
        "postId",
        "categoryId"
      ]
    },
    "Session": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "userId": {
          "type": "integer"
        }
      },
      "required": [
        "token",
        "updatedAt",
        "userId"
      ]
    }
  },
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/definitions/User"
    },
    "post": {
      "$ref": "#/definitions/Post"
    },
    "tag": {
      "$ref": "#/definitions/Tag"
    },
    "category": {
      "$ref": "#/definitions/Category"
    },
    "role": {
      "$ref": "#/definitions/Role"
    },
    "userRole": {
      "$ref": "#/definitions/UserRole"
    },
    "tagOnPost": {
      "$ref": "#/definitions/TagOnPost"
    },
    "categoryOnPost": {
      "$ref": "#/definitions/CategoryOnPost"
    },
    "session": {
      "$ref": "#/definitions/Session"
    }
  }
}